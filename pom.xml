        <profile>
            <id>sample</id>
            <activation>
                <property>
                    <name>!none</name>
                </property>
            </activation>
            <properties>
                <exclude.sample>none</exclude.sample>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${project.basedir}/src/main/resources</directory>
